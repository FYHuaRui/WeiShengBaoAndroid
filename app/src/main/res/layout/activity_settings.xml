<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc">
<!--title bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:padding="5dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/down_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <!--head photo-->
    <RelativeLayout
        android:id="@+id/rl_head_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:layout_marginTop="20dp"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/up_arrow"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_head_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_toLeftOf="@id/iv_right_arrow"
            />
    </RelativeLayout>
    <!--修改昵称-->
    <RelativeLayout
        android:id="@+id/rl_modify_nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:layout_marginTop="20dp"
        android:padding="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改昵称"/>
        <ImageView
            android:id="@+id/iv_modify_nickName_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/down_arrow"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_modify_nickName_arrow"
            android:layout_centerVertical="true"
            android:text="会飞的猪"/>
    </RelativeLayout>
    <!--清理缓存-->
    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
android:layout_marginTop="1dp"
        android:padding="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清理缓存"/>
        <ImageView
            android:id="@+id/iv_clear_cache_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/down_arrow"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toLeftOf="@id/iv_clear_cache_arrow"
            android:layout_centerVertical="true"
            android:text="18.03K"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:layout_marginTop="30dp"
        android:padding="7dp"
        android:text="退出账号"
        android:gravity="center"
        android:textColor="#FFED5F5F"/>
</LinearLayout>